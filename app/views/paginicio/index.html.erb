<script src="https://clados.ugr.es/DS5/assets/jquery.js" type="text/javascript"></script>
<p id="notice"><%= notice %></p>

<% if signed_in? %>
  <%= link_to "Salir", destroy_user_session_path, method: :delete %>

  <div class="contenedor_eventos">

    <div class="fila_eventos">

      <article class="evento">
        <h1>Tarjetas</h1>
      </article>

      <article class="evento">
        <h1>Préstamos</h1>
      </article>

      <article class="evento">
        <h1>Usuarios</h1>
      </article>

      <%= link_to 'Add', '#', :onclick => 'sum_fn()' %>
      <%= javascript_tag do %>
        function sum_fn() {
        /* Assuming you have jQuery */
        $.post('ajax/sum.json', {
        num1: 100,
        num2: 50
        }, function(data) {
        console.log(data.result);
        var output = data.result;
        /* output should be 150 if successful */
        });
        }
      <% end %>

      <article class="evento">
        <table>
          <thead>
          <tr>
            <th>Id Request</th>
            <th>Id Cuenta</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @requests = Request.all%>
          <% @requests.each do |request| %>
            <% if request.tipo == 0 &&  request.solved == 0 %>

            <tr>
              <td><%= request.id_objetivo %></td>
              <td><%= request.account_id %></td>
              <td><%= link_to 'Aceptar', paginicio_index_path%></td>
              <td><%= link_to 'Rechazar', paginicio_index_path %></td>
<!--              <td><%#= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
            </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </article>

      <article class="evento">
        <table>
          <thead>
          <tr>
            <th>Id Request</th>
            <th>Id Cuenta</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @requests = Request.all%>
          <% @requests.each do |request| %>
            <% if request.tipo == 1 &&  request.solved == 0 %>

              <tr>
                <td><%= request.id_objetivo %></td>
                <td><%= request.account_id %></td>
                <td><%= link_to 'Aceptar', paginicio_index_path %></td>
                <td><%= link_to 'Rechazar', paginicio_index_path %></td>
<!--                <td><%#= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </article>

      <article class="evento">

        <button><%= link_to "Dar de Alta", new_account_path %></button>

        <br><br>

        <table>
          <thead>
          <tr>
            <th>Name</th>
            <th>Dni</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @accounts = Account.all %>
          <% @accounts.each do |account| %>
            <tr>
              <td><%= account.name %></td>
              <td><%= account.dni %></td>
              <td><%= link_to 'Ver', account %></td>
              <td><%= link_to 'Editar', edit_account_path(account) %></td>
              <td><%= link_to 'Eliminar', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </article>


    </div>


  </div>


  </div>



<% else %>
  <div class="login">
    <h1>Señor@ empleado@, le damos la bienvenida a la web de gestión de iBank.</h1>
    <br>
    <h1><button><%= link_to "Inicia Sesión", new_user_session_path %></button></h1>

  </div>
<% end %>